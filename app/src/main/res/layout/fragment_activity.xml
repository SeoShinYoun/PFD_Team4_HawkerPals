<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomnavbartutorial.fragments.ActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ic_launcher_background">

        <ImageButton
            android:id="@+id/telebutton"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:layout_above="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="89dp"
            android:layout_marginBottom="76dp"
            android:layout_weight="1"
            android:src="@drawable/telegram"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/dbsbutton"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="86dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="33dp"
            android:src="@drawable/dbslah" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dbsbutton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="13dp"
            android:text="Learn how to make payment with DBS' PayLah! Telegram Bot"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_above="@+id/telebutton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="17dp"
            android:text="Learn more about HawkerPals! and various payment options through our telegram bot!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>